@import "variable.styl"
@import "mixin.styl"

html, body 
  line-height: 1
  font-family: '黑体'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $color-text
  .font-weight
    font-weight: 700
  sub, sup
    font-size: 75%
    line-height: 0
    position: relative
    vertical-align: baseline
  sub
    bottom: -0.25em
  sup
    top: -0.5em
  .clearfix:before,.clearfix:after
    content: ''
    display: table
  .clearfix:after
    clear: both
  .border-bottom,.border-top
    position: relative
    &:after
      content: ''
      display: block
      position: absolute
      width: 100%
      left: 0
      bottom: 0
      height: 1px
      background-color: #c8c7cc
      transform: scaleY(0.5)
      @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
        transform: scaleY(0.33)
  .border-top
    &:after
      top: 0
  input::-webkit-input-placeholder
    color: #BEC2CC
  input:-moz-placeholder 
    color: #BEC2CC
  input::-moz-placeholder
    color: #BEC2CC
  input:-ms-input-placeholder
    color: #BEC2CC
  input.error::-webkit-input-placeholder 
    color: #E63617
  input.error:-moz-placeholder
    color: #E63617
  input.error::-moz-placeholder
    color: #E63617
  input.error:-ms-input-placeholder
    color: #E63617
  .selectBar
    position: relative
    display: flex
    align-items: center
    padding: 20px 0
    font-size: 16px
    height: 16px
    line-height: 16px
    .tit
      flex: 1 1 40%
      color: $color-theme-head
      letter-spacing: 0
    .select
      display: flex
      align-items: center
      flex: 1 1 60%
      font-weight: 700
      span
        flex: 1 1 100%
        text-align: right
        font-size: 14px
        &.primary
          color: $color-theme-hold
        &.left
          text-align: left
      .el-icon-caret-right
        icon-color($color-theme)